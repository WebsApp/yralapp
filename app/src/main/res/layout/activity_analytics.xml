<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_color"
    tools:context=".activity.QueryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="know my analytics"
            android:textSize="18dp"
            android:id="@+id/back"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_height="60dp"></TextView>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:src="@drawable/logo"
            android:layout_height="60dp"></ImageView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:id="@+id/root"

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/graph"
                android:id="@+id/image">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="know my analytics"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/text_desc"
                    android:paddingLeft="20dp"
                    android:textSize="14dp"
                    android:text="know my analytics here"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/tendp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it t"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/mylike"
                            android:layout_height="wrap_content"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="My Like, Comments"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/videoview"
                            android:layout_height="wrap_content"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="My Video View"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/follower"
                            android:layout_height="wrap_content"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="My Follower"
                            android:gravity="center"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:text="My Likes, Comments"
        android:layout_margin="@dimen/tendp"
        android:background="@color/idle_dot"
        android:layout_height="wrap_content"></Button>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ana2"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"></ImageView>
    <Button
        android:layout_width="match_parent"
        android:text="My Video View"
        android:layout_margin="@dimen/tendp"
        android:background="@color/idle_dot"
        android:layout_height="wrap_content"></Button>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ana1"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"></ImageView>
    <Button
        android:layout_width="match_parent"
        android:text="My Follower"
        android:layout_margin="@dimen/tendp"
        android:background="@color/idle_dot"
        android:layout_height="wrap_content"></Button>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ana3"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"></ImageView>

</LinearLayout>
</ScrollView>