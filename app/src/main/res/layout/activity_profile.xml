<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/light_color"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:text=""
                android:textSize="18dp"
                android:id="@+id/back"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_back"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_height="60dp"></TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:src="@drawable/logo_3"
                android:layout_height="40dp"></ImageView>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/cover"
            android:layout_below="@id/header"
            android:scaleType="centerCrop"
            android:id="@+id/iv_cover"
            android:layout_height="250dp"></ImageView>
    <RelativeLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:id="@+id/setting"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/setting"
            android:layout_height="30dp"></ImageView>

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="30dp"
            android:id="@+id/camera"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/camera"
            android:layout_height="30dp"></ImageView>
    </RelativeLayout>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:id="@+id/cv"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="-50dp"
       android:layout_marginRight="24dp"
       android:layout_marginLeft="24dp"
       android:layout_below="@id/iv_cover"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
       <LinearLayout    android:orientation="horizontal"
           android:id="@+id/root"
           android:background="@color/white"
           android:layout_marginTop="@dimen/dimen5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:civ_border_width="2dp"
               android:layout_marginLeft="10dp"
               app:civ_border_overlay="true"
               android:src="@drawable/c1"
               android:id="@+id/iv_profile"
               >
           </de.hdodenhof.circleimageview.CircleImageView>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight=".6"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="match_parent"
                   android:id="@+id/tv_name"
                   android:textSize="14dp"
                   android:layout_gravity="left"
                   android:text=""
                   android:paddingLeft="10dp"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="match_parent"
                   android:id="@+id/tv_email"
                   android:textSize="14dp"
                   android:visibility="gone"
                   android:layout_gravity="left"
                   android:gravity="left"
                   android:paddingLeft="10dp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"></TextView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight=".4"
               android:orientation="vertical"
               android:layout_height="match_parent">
               <Button
                   android:padding="@dimen/dimen5"
                   android:layout_width="match_parent"
                   android:id="@+id/follow"
                   android:textSize="14dp"
                   android:layout_gravity="center"
                   android:text="Follow"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:background="@color/black"
                   android:layout_height="wrap_content"></Button>

           </LinearLayout>
       </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="0"
                   android:id="@+id/tv_follower"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="0"
                   android:id="@+id/tv_following"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="0"
                   android:id="@+id/tv_like"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="0"
                   android:id="@+id/tv_post"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"></TextView>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="follower"
                   android:gravity="center"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="following"
                   android:gravity="center"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="Likes"
                   android:gravity="center"
                   android:layout_height="wrap_content"></TextView>
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".25"
                   android:text="Post"
                   android:gravity="center"
                   android:layout_height="wrap_content"></TextView>

           </LinearLayout>

       </LinearLayout>


   </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/cv"
        android:id="@+id/lt"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="@dimen/dimen5"
            android:textColor="@color/blue"
            android:id="@+id/tv_about"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:padding="@dimen/tendp"
            android:id="@+id/tv_desc"
            android:textColor="@color/lightblue"
            android:background="@drawable/border"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/lt"
        android:id="@+id/lt2"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Photos"
                android:drawableRight="@drawable/ic_insert_photo_black_24dp"
                android:layout_height="wrap_content"></Button>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Videos"
                android:drawableRight="@drawable/ic_play_circle_filled_black_24dp"
                android:layout_height="wrap_content"></Button>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:text="Stories"
                android:drawableRight="@drawable/ic_face_black_24dp"
                android:layout_height="wrap_content"></Button>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lt3"
            android:orientation="vertical"
            android:layout_below="@+id/lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                 android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="People you may Know"
                android:layout_height="wrap_content"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerview"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
<com.google.android.material.tabs.TabLayout
    android:layout_width="match_parent"
    android:layout_below="@id/lt3"
    android:id="@+id/tab"
    android:layout_height="wrap_content"></com.google.android.material.tabs.TabLayout>
   <com.webapps.viral.utils.HeightWrappingViewPager
       android:layout_width="match_parent"
       android:layout_below="@id/tab"
       android:id="@+id/viewpager"
       android:layout_marginTop="5dp"
       android:layout_height="match_parent"></com.webapps.viral.utils.HeightWrappingViewPager>

</RelativeLayout>
</ScrollView>