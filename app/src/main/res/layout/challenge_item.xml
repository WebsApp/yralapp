<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_marginTop="@dimen/dimen5"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4D9D9"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen5"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Challenge Title"
                android:textSize="22dp"
                android:id="@+id/ctitle"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/grey"
                android:layout_width="match_parent"
                android:text="this is challenge is for testing purpose "
                android:textSize="18dp"
                android:id="@+id/cdesc"
                android:layout_height="wrap_content"></TextView>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:elevation="@dimen/dimen5"
                    app:cardCornerRadius="@dimen/dimen5"
                    app:cardElevation="@dimen/dimen5"
                    android:layout_margin="@dimen/dimen5"
                    android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:elevation="@dimen/dimen5"
                   android:orientation="vertical"
                   android:layout_height="wrap_content"
                  >
                   <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:text="Completed"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"></TextView>
                   <TextView
                       android:textColor="@color/basecolor"
                       android:layout_width="match_parent"
                       android:text="10"
                       android:textSize="20dp"
                       android:gravity="center"
                       android:layout_height="wrap_content"></TextView>

               </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:elevation="@dimen/dimen5"
                    app:cardCornerRadius="@dimen/dimen5"
                    app:cardElevation="@dimen/dimen5"
                    android:layout_margin="@dimen/dimen5"
                    android:layout_height="wrap_content">
                <LinearLayout
                android:layout_width="match_parent"
                android:elevation="@dimen/dimen5"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"

                    android:text="Pending"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textColor="@color/basecolor"
                    android:layout_width="match_parent"

                    android:text="5"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"></TextView>

                </LinearLayout></androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:elevation="@dimen/dimen5"
                    app:cardCornerRadius="@dimen/dimen5"
                    app:cardElevation="@dimen/dimen5"
                    android:layout_margin="@dimen/dimen5"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:elevation="@dimen/dimen5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="Overall"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:textColor="@color/basecolor"
                        android:layout_width="match_parent"

                        android:text="15"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout></androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img"
                        android:layout_width="60dp"
                        android:src="@drawable/user1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_height="40dp"></de.hdodenhof.circleimageview.CircleImageView>
                    <ImageView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dimen5"
                        android:layout_width="10dp"
                        android:layout_marginStart="@dimen/dimen5"
                        android:layout_alignBottom="@+id/img"
                        android:src="@drawable/user_status"
                        android:layout_height="10dp"></ImageView>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_name"
                    android:background="@null"
                    android:paddingLeft="2dp"
                    android:text="Akash Gupta"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_weight=".8"
                    android:background="@null"
                    android:visibility="gone"
                    android:paddingLeft="2dp"
                    android:text="I am Akash"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/time"
                    android:text="10"
                    android:textColor="@color/black"
                    android:layout_below="@id/image"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/location"
                    android:text=""
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    android:textColor="@color/grey_500"
                    android:paddingLeft="2dp"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_gravity="right"
                android:id="@+id/save_post"
                android:src="@drawable/ic_bookmark_border_black_24dp"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:src="@drawable/post1"
                android:layout_below="@+id/id1"

                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                ></ImageView>
            <RelativeLayout
                android:id="@+id/rl_viewpager"
                android:layout_below="@+id/id1"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/viewpager"
                    android:visibility="visible"
                    android:layout_height="250dp"></androidx.recyclerview.widget.RecyclerView>
                <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                    android:id="@+id/indicator"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/play"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:visibility="visible"
                android:src="@drawable/play"
                android:layout_height="50dp"></ImageView>
            <TextView
                android:id="@+id/join"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="@dimen/dimen5"
                android:layout_width="50dp"
                android:visibility="visible"
                android:background="@drawable/gradient_circle"
               android:gravity="center"
                android:padding="@dimen/dimen5"
               android:text="join"
                android:layout_height="50dp"></TextView>
            <TextView
                android:id="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="@dimen/dimen5"
                android:layout_width="50dp"
                android:visibility="visible"
                android:background="@drawable/gradient_circle"
                android:gravity="center"
                android:padding="@dimen/dimen5"
                android:text="View"
                android:textColor="@color/white"
                android:layout_height="50dp"></TextView>
        </RelativeLayout>

            <TextView
               android:layout_width="match_parent"
               android:textSize="16dp"
               android:id="@+id/text_desc"
               android:paddingLeft="@dimen/dimen5"
               android:background="@color/white"
               android:layout_height="wrap_content"></TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/like"
                android:src="@drawable/favorite_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:text=""
                android:id="@+id/liker"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:text="0"
                android:id="@+id/comment"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/comment"
                android:gravity="center"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:text="0"
                android:id="@+id/share"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/share"
                android:gravity="center"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

