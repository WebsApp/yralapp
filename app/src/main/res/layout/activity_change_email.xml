<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_color"
    tools:context=".activity.QueryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Change your Email"
            android:textSize="18dp"
            android:id="@+id/back"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_height="60dp"></TextView>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:src="@drawable/logo"
            android:layout_height="60dp"></ImageView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/dimen5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:id="@+id/root"

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/email_e_a"
                android:id="@+id/image">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Change Email"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/text_desc"
                    android:paddingLeft="20dp"
                    android:textSize="14dp"
                    android:text="change email here"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/tendp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it t"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:inputType="textEmailAddress"
                        android:hint="Enter your email"
                        android:layout_height="wrap_content"></EditText>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/newemail"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:hint="Enter New Email"
                        android:inputType="textEmailAddress"
                        android:layout_height="wrap_content"></EditText>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pinWidth="40dp"
        app:pinHeight="40dp"
        app:pinLength="4"
        app:cursorVisible="false"
        app:forceKeyboard="true"
        app:hint="0"
        app:inputType="number"
        app:password="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/gradient_intro_button"
        android:layout_marginBottom="24dp"
        android:text="Get OTP"
        android:id="@+id/login"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/gradient_intro_button"
        android:layout_marginBottom="24dp"
        android:text="Confirm OTP"
        android:id="@+id/confirm_otp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/gradient_intro_button"
        android:layout_marginBottom="24dp"
        android:text="Change Email"
        android:id="@+id/submit"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        />
</LinearLayout>